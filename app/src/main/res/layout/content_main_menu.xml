<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main_menu"
    tools:showIn="@layout/app_bar_main_menu"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_musei"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/musei" />


            <TextView
                android:id="@+id/Musei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"

                android:text="MUSEI"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"

                android:textStyle="bold" />
        </FrameLayout>

        <Switch
            android:id="@+id/MuseiS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"


            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/im_musei" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_teatri"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/teatri" />

            <TextView
                android:id="@+id/Teatri"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="TEATRI"

                 />
        </FrameLayout>
        <Switch
            android:layout_marginBottom="10dp"
            android:id="@+id/TeatriS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"


            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/im_teatri"
            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_ristoranti"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/cucina" />

            <TextView
                android:id="@+id/Ristoranti"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="RISTORANTI"

                />
        </FrameLayout>
        <Switch
            android:layout_marginBottom="10dp"
            android:id="@+id/RistorantiS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"


            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/im_ristoranti" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_piazze"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/piazzestrade" />

            <TextView
                android:id="@+id/Piazze"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="PIAZZE E STRADE"

                 />
        </FrameLayout>
        <Switch
            android:layout_marginBottom="10dp"
            android:id="@+id/PiazzeS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"


            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/im_ristoranti" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_chiese"
                android:layout_width="match_parent"
                android:layout_height="235dp"

                app:srcCompat="@drawable/chiese" />


            <TextView
                android:id="@+id/Chiese"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="CHIESE"

                 />
        </FrameLayout>
        <Switch
            android:layout_marginBottom="10dp"
            android:id="@+id/ChieseS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"


            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/im_ristoranti" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/im_monumenti"
                android:layout_width="match_parent"
                android:layout_height="235dp"

                app:srcCompat="@drawable/monumenti" />

            <TextView
                android:id="@+id/Monumenti"
                android:textColor="@color/colorAccent"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="MONUMENTI"

                />
        </FrameLayout>
        <Switch
            android:layout_marginBottom="10dp"
            android:id="@+id/MonumentiS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"


            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/im_ristoranti" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>